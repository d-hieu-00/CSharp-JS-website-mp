@{
    ViewData["Title"] = "Thông tin sản phẩm";
    Layout = "_Layout";
}
<partial name="~/Views/Shared/nav.cshtml" />
<div class="container mt-3">
    <div class="row" id_p="@ViewData["id"]">
        <div class="col-md-5">
            <img class="border img-fluid img_product" src="~/img/product.png">
        </div>

        <div class="col-md-5">
            <p class="text-secondary m-1">@ViewData["name"]</p>
            <p class="price-product m-1">@ViewData["price"] ₫</p>
            <p class="m-1">Thương hiệu: <span>@ViewData["brand"]</span></p>
            @{ 
                if (Convert.ToString(ViewData["color"]) != "#000000")
                {
                    <p class="m-1 form form-inline"> Màu: 
                    <span>
                        <input disabled type="color" class="p-color ml-2" value="@ViewData["color"]"/>
                    </span>
                    </p>
                }
            }
            <hr>
            <p class="text-secondary m-1">@Html.Raw(ViewData["short-discription"])</p>
            <hr>
            <div class="form form-inline">
                <input class="form-control quantity mr-3" type="number" min="1" value="1">
                <button class="btn btn-success addToCart">
                    <i class="fa fa-shopping-cart d-inline" aria-hidden="true"></i>
                    Thêm vào giỏ
                </button>
            </div>
        </div>
        <div class="col-md-2">
        </div>
    </div>
    <div class="info border mt-3">
        <div class="head-info p-2">
            Thông tin sản phẩm
        </div>
        <div class="body-info p-2">
            @Html.Raw(ViewData["discription"])
        </div>
    </div>
</div>

@section scripts{
    <script>
        $(document).ready(function () {
            loadCategory()
            LoadImageForProductInfoSite(@ViewData["id"])
        })
    </script>
}