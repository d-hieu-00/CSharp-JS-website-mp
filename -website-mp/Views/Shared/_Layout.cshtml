<!DOCTYPE html>

<html>
<head>
    <title>@ViewBag.Title</title>
    <meta name="viewport" content="width=device-width" />
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="stylesheet" href="~/bootstrap-4.5.3-dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/css/user.css">
    <link rel="stylesheet" href="~/css/admin.css">
    <link rel="stylesheet" href="~/DataTables/datatables.css">
    <link rel="stylesheet" href="~/fontawesome-free-5.15.1-web/css/all.css">
    <link rel="icon" href="~/img/favicon.png" type="image/png" sizes="16x16 32x32">
</head>
<body>
    <header>
        <div class="container d-flex">
            <a href="tel:0965690984" class="p-2">
                <i class="fa fa-phone"></i> 0965 690 984
            </a>

            <a href="mailto:info@gmail.com" class="p-2">
                <i class="fas fa-envelope"></i> info@gmail.com
            </a>

            <a action="" class="p-2">
                <i class="fa fa-map-marker"></i> Khu phố 6, P.Linh Trung, Q.Thủ Đức, Tp.Hồ Chí Minh
            </a>

            <a class=" nav-link dropdown-toggle ml-auto p-2" href="#" id="bd-versions" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                <i class="fa fa-user" aria-hidden="true"></i>
                @{
                    string acc = Context.Session.GetString("Account");
                    if (acc != null)
                    {
                        <strong class='account_user'>@acc</strong>
                    }
                    else
                    {
                        string temp = "Tài khoản";
                        @temp
                    }
                }
            </a>

            <div class="dropdown-menu dropdown-menu-md-right">
            @{
                if (acc != null)
                {
                    <a class="dropdown-item" href="/user/profile">
                        <i class="far fa-id-card"></i>
                        Thông tin tài khoản
                    </a>
                    <div class="dropdown-divider"></div>
                    <a class="dropdown-item" href="/user/logout">
                        <i class="fas fa-sign-out-alt"></i> 
                        Đăng xuất
                    </a>
                }
                else
                {
                    <a class="dropdown-item" href="/user/login">
                        <i class="fas fa-sign-in-alt"></i> Đăng nhập
                    </a>
                }
            }
                <div class="dropdown-divider"></div>
                <a class="dropdown-item" href="~/user/signup">
                    <i class="fa fa-plus-square" aria-hidden="true"></i> Tạo tài khoản
                </a>
            </div>
        </div>
    </header>
    
        @RenderBody()
    <footer class="site-footer">

        <div class="container py-5 mt-3">
            <div class="row">
                <div class="col-12 col-md text-center">
                    <a href="~/home/index">
                        <img class="img-logo" src="~/img/favicon.png" alt="banner">
                    </a>
                    <small class="d-block mb-3 text-muted">© 2019-2020</small>
                </div>

                <div class="col-6 col-md">
                    <h5>Danh mục chính</h5>
                    <ul class="list-unstyled text-small">
                        <li><a class="text-muted" href="#">Cool stuff</a></li>
                        <li><a class="text-muted" href="#">Random feature</a></li>
                        <li><a class="text-muted" href="#">Team feature</a></li>
                        <li><a class="text-muted" href="#">Stuff for developers</a></li>
                        <li><a class="text-muted" href="#">Another one</a></li>
                        <li><a class="text-muted" href="#">Last time</a></li>
                    </ul>
                </div>

                <div class="col-6 col-md">
                    <h5>Nguồn</h5>
                    <ul class="list-unstyled text-small">
                        <li><a class="text-muted" href="#">Resource</a></li>
                        <li><a class="text-muted" href="#">Resource name</a></li>
                        <li><a class="text-muted" href="#">Another resource</a></li>
                        <li><a class="text-muted" href="#">Final resource</a></li>
                    </ul>
                </div>

                <div class="col-6 col-md">
                    <h5>Nhóm phát triển</h5>
                    <ul class="list-unstyled text-small">
                        <li><a class="text-muted" href="#">Business</a></li>
                        <li><a class="text-muted" href="#">Education</a></li>
                        <li><a class="text-muted" href="#">Government</a></li>
                        <li><a class="text-muted" href="#">Gaming</a></li>
                    </ul>
                </div>

                <div class="col-6 col-md">
                    <h5>Thông tin</h5>
                    <ul class="list-unstyled text-small">
                        <li><a class="text-muted" href="#">Team</a></li>
                        <li><a class="text-muted" href="#">Locations</a></li>
                        <li><a class="text-muted" href="#">Privacy</a></li>
                        <li><a class="text-muted" href="#">Terms</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </footer>
    <script src="~/js/jquery-3.5.1.min.js"></script>
    <script src="~/bootstrap-4.5.3-dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/DataTables/datatables.js"></script>
    <script src="~/js/my-script.js"></script>
    @RenderSection("scripts", false)
</body>
</html>
