<!DOCTYPE html>

<html>
<head>
    <title>@ViewBag.Title</title>
    <meta name="viewport" content="width=device-width" />
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="stylesheet" href="~/bootstrap-4.5.3-dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/css/user.css">
    <link rel="stylesheet" href="~/css/admin.css">
    <link rel="stylesheet" href="~/DataTables/datatables.css">
    <link rel="stylesheet" href="~/fontawesome-free-5.15.1-web/css/all.css">
    <link rel="icon" href="~/img/favicon.png" type="image/png" sizes="16x16 32x32">
</head>
<body>
    <header>
        <div class="container d-flex">
            <a href="tel:0965690984" class="p-2">
                <i class="fa fa-phone"></i> 0965 690 984
            </a>

            <a href="mailto:info@gmail.com" class="p-2">
                <i class="fas fa-envelope"></i> info@gmail.com
            </a>

            <a action="" class="p-2">
                <i class="fa fa-map-marker"></i> Khu phố 6, P.Linh Trung, Q.Thủ Đức, Tp.Hồ Chí Minh
            </a>

            <a class=" nav-link dropdown-toggle ml-auto p-2" href="#" id="bd-versions" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                <i class="fa fa-user" aria-hidden="true"></i>
                @{
                    string acc = Context.Session.GetString("Account");
                    if (acc != null)
                    {
                        <strong class='account_user'>@acc</strong>
                    }
                    else
                    {
                        string temp = "Tài khoản";
                        @temp
                    }
                }
            </a>

            <div class="dropdown-menu dropdown-menu-md-right">
                @{
                    if (acc != null)
                    {
                        <a class="dropdown-item" href="/user/profile">
                            <i class="far fa-id-card"></i>
                            Thông tin tài khoản
                        </a>
                        <div class="dropdown-divider"></div>
                        <a class="dropdown-item" href="/user/logout">
                            <i class="fas fa-sign-out-alt"></i>
                            Đăng xuất
                        </a>
                    }
                    else
                    {
                        <a class="dropdown-item" href="/user/login">
                            <i class="fas fa-sign-in-alt"></i> Đăng nhập
                        </a>
                    }
                }
                <div class="dropdown-divider"></div>
                <a class="dropdown-item" href="~/user/signup">
                    <i class="fa fa-plus-square" aria-hidden="true"></i> Tạo tài khoản
                </a>
            </div>
        </div>
    </header>

    @RenderBody()
    <div style="min-height: calc(100vh - 600px);"></div>
    <footer class="site-footer">

        <div class="container py-5 mt-3">
            <div class="row">
                <div class="col-12 col-md text-center">
                    <a href="~/home/index">
                        <img class="img-logo" src="~/img/favicon.png" alt="banner">
                    </a>
                    <small class="d-block mb-3 text-muted">© 2019-2020</small>
                </div>

                <div class="col-6 col-md">
                    <h5>Danh mục nổi bậc</h5>
                    <ul class="list-unstyled text-small">
                        <li><a class="text-muted" href="/product/getbytype/3">Trang điểm môi</a></li>
                        <li><a class="text-muted" href="/product/getbytype/5">Dưỡng da</a></li>
                        <li><a class="text-muted" href="/product/getbytype/10">Nước hoa nữ</a></li>
                        <li><a class="text-muted" href="/product/getbytype/4">Mask - mặt nạ</a></li>
                    </ul>
                </div>

                <div class="col-6 col-md">
                    <h5>Thành viên phát triển</h5>
                    <ul class="list-unstyled text-small">
                        <li class="text-muted">18520746 - Nguyễn Duy Hiệu</li>
                        <li class="text-muted">18521016 - Bạch Thanh Long</li>
                        <li class="text-muted">18521325 - Đỗ Thị Thảo Quỳnh</li>
                    </ul>
                </div>

                <div class="col-6 col-md text-break">
                    <h5>Thông tin</h5>
                    <address>
                        <p><b>Địa chỉ: </b><span class="text-info">
                        Khu phố 6, Phường Linh Trung, Quận Thủ Đức, Thành Phố Hồ Chí Minh
                        </span></p>
                    </address>
                    <p><b>Điện Thoại: </b><span class="text-info">0965 690 984</span></p>
                    <p><b>Email: </b><span class="text-info">duyhieu90768@gmail.com</span></p>
                </div>
            </div>
        </div>
    </footer>
    <script src="~/js/jquery-3.5.1.min.js"></script>
    <script src="~/bootstrap-4.5.3-dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/DataTables/datatables.js"></script>
    <script src="~/js/my-script.js"></script>
    <script>
        $(document).ready(function () {
            $("#sreach").keyup(function (e) {
                if (e.keyCode == 13) {
                    $("#sreach-product").trigger('click')
                }
            })
        })
    </script>
    @RenderSection("scripts", false)
</body>
</html>
